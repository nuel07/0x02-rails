<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-label">
    <% form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name, class: "form-control", placeholder: "First Name" %>
  </div>

  <div class="form-label">
    <% form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
  </div>

  <div class="form-label">
    <% form.label :nickname, style: "display: block" %>
    <%= form.text_field :nickname, class: "form-control", placeholder: "Nickname" %>
  </div>

  <div class="form-label">
    <% form.label :email, style: "display: block" %>
    <%= form.text_field :email, class: "form-control", placeholder: "Email" %>
  </div>

  <div class="form-label">
    <% form.label :phone, style: "display: block" %>
    <%= form.text_field :phone, class: "form-control", placeholder: "Phone Number" %>
  </div>

  <div class="form-label">
    <% form.label :instagram, style: "display: block" %>
    <%= form.text_field :instagram, class: "form-control", placeholder: "Instagram" %>
  </div>

  <div class="form-label">
    <% form.label :user_id, style: "display: block" %>
    <%= form.number_field :user_id, id: :friend_user_id,
    class: "form-control", value: current_user.id, type: :hidden %>
  </div>
  <br>
  <div>
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
