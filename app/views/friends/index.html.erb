<% if user_signed_in? %>
  <h1>My Friends</h1>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Nickmame</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Instagram</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
      <tr>
        <td><%= link_to friend.first_name + ' ' + friend.last_name, friend, class: "text-decoration-none"  %></td>
        <td><%= friend.nickname %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.instagram %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend), class: "btn btn-sm btn-outline-success" %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
<br/>
<%= link_to "New friend", new_friend_path, class: "btn btn-primary" %>

<% else %>
  <h1>Welcome to Friends</h1>
  <h5><%= link_to "Sign up", new_user_registration_path %> or <%= link_to "Login", new_user_session_path %> to start creating a friends list</h5>
<% end %>
